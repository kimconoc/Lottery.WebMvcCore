@{
    //Layout = null;
}

<!DOCTYPE html>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
<html>
<head>
    <style>
        /*Ghi đè tự động điền*/
        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            /*background*/
            -webkit-box-shadow: 0 0 0 30px white inset !important;
        }

        input:-webkit-autofill {
            /*color*/
            -webkit-text-fill-color: none !important;
        }
        /*Ghi đè class*/
        .box-login-form .box-input-login input:focus {
            outline: none;
        }


        .box-form-account {
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
            margin: 0 auto;
            margin-top: 20vh;
            width: 100%;
            max-width: 450px;
            background-color: white;
            box-shadow: 0 6px 6px rgb(0 0 0 / 6%);
            padding: 30px;
        }

            .box-form-account input {
                flex: 1;
                border: 0px solid transparent;
                font-size: 17px;
                outline: none;
                border: 0;
                flex-shrink: 0;
                filter: none;
            }


        .box-login-form {
        }

            .box-login-form .header {
                width: 100%;
                font-size: 25px;
            }


            .box-login-form .box-input-login {
                margin-top: 20px;
                background-color: white;
                box-sizing: border-box;
                width: 100%;
                height: 45px;
                border: 1px solid rgba(0,0,0,.14);
                border-radius: 2px;
                width: 100%;
                display: flex;
                padding: 2px 10px 0 10px;
                overflow: hidden;
                box-shadow: inset 0 2px 0 rgb(0 0 0 / 2%);
                outline: none;
                justify-content: space-between;
            }

                .box-login-form .box-input-login i {
                    width: auto;
                    font-size: 18px;
                    padding: 10px 0 8px 12px;
                    cursor: pointer;
                }

                .box-login-form .box-input-login #show_password {
                    color: #05a;
                }

            .box-login-form .btn-login {
                width: 100%;
                margin-top: 20px;
                height: 45px;
                font-size: 17px;
            }

            .box-login-form .box-lable-login {
                margin-top: 5px;
                /*Chia đều khoảng và cái đứa cái cuối về sát lề*/
                display: flex;
                justify-content: space-between;
                color: #05a;
            }

                .box-login-form .box-lable-login a {
                    color: #05a;
                }

            .box-login-form .box-describe {
                margin-top: 20px;
                text-transform: uppercase;
                font-size: .75rem;
                display: flex;
            }

                .box-login-form .box-describe span {
                    margin: 0 5px 0 5px;
                    font-size: 11px;
                }

                .box-login-form .box-describe .slim-line {
                    margin-top: 7px;
                    height: 1.5px;
                    background-color: #ccc;
                }

            .box-login-form .box-register {
                margin-top: 40px;
                align-items: center;
                display: flex;
                justify-content: center;
                width: 100%;
            }

                .box-login-form .box-register a {
                    margin-left: 5px;
                    color: #ee4d2d;
                }


    </style>
</head>
<body style="background-color: #dee8fc;">
    <div class="box-form-account">
        <div class="box-login-form">
            <form role="form" method="post">
                @Html.AntiForgeryToken()
                <div class="header">
                    Đăng nhập
                </div>

                <div id="box_login_form_account" class="box-input-login">
                    <input id="loginName" name="LoginName" required maxlength="10" placeholder="Tài khoản" value="">
                </div>
                <div id="box_login_form_password" class="box-input-login">
                    <input type="password" id="password" name="Password" required maxlength="50" placeholder="Mật Khẩu" value="" />
                    <i id="hide_password" class="icon-show-password fa fa-eye-slash" aria-hidden="true"></i>
                    <i id="show_password" style="display:none;" class="icon-show-password fa fa-eye" aria-hidden="true"></i>
                </div>
                <span class="validate-error" id="alert_login"></span>
                <button class="btn-login btn-core-accept">Đăng nhập</button>
                @*<div class="box-describe">
                <div class="slim-line">
                </div>
                <span>Hoặc</span>
                <div class="slim-line">
                </div>
                </div>
                <div class="box-register">
                Liên hệ Amin?
                <a href="/Account/RegisterAccount">Liên hệ</a>
                </div>*@
            </form>
        </div>
    </div>
    <script>
        $(document).ready(function ()
        {
            $('#loginName').on('focus', function () {
                document.getElementById("box_login_form_account").style.borderColor = "rgb(7, 171, 226)";
            });
            $('#loginName').on('blur', function () {
                document.getElementById("box_login_form_account").style.borderColor = "rgba(0,0,0,.14)";
            });
            $('#password').on('focus', function () {
                document.getElementById("box_login_form_password").style.borderColor = "rgb(7, 171, 226)";
            });
            $('#password').on('blur', function () {
                document.getElementById("box_login_form_password").style.borderColor = "rgba(0,0,0,.14)";
            });
            if ('@ViewBag.Message' != '')
            {
                $('#alert_login').html('@ViewBag.Message');
                $('#alert_login').fadeIn(500);
                setTimeout("$('#alert_login').fadeOut(1500);", 5000 );
            };
        });
    </script>

</body>
</html>
