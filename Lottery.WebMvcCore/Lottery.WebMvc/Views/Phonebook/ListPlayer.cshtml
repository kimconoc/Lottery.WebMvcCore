@using Lottery.DoMain.Constant;
@using Lottery.DoMain.Models;
@using Newtonsoft.Json;
@using Lottery.DoMain.Enum;
@inject IHttpContextAccessor HttpContextAccessor
@{
    User user = new User();
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cookieValue = HttpContextAccessor.HttpContext.Request.Cookies["LotteryCookie"];
    if (cookieValue != null)
    {
        user = JsonConvert.DeserializeObject<User>(cookieValue);
    }
    else
    {
        HttpContextAccessor.HttpContext.Response.Redirect("/Account/Login");
    }
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link href="~/css/listPlayer.css" rel="stylesheet" />
    <style>
        
    </style>
</head>
<body>
    <div class="container-listplayer">
        <div class="info-page">
            <strong>
                Danh Bạ
            </strong>
        </div>
        @if (user.Phonebooks != null)
        {
            foreach (var item in user.Phonebooks)
            {
                <div class="div-list-player">
                    <div class="avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div style="flex: 1;">
                        <div class="info-detail">
                            <strong style="font-size:16px;">@string.Format(item.Name)</strong>
                            <span style="margin-top:5px;">@string.Format(item.PhoneNumber)</span>
                        </div>
                        <i class="icon-danger-delete fa fa-trash" aria-hidden="true"></i>
                        <i class="icon-danger-info fa fa-info-circle" aria-hidden="true"></i>
                        @{
                            if(string.IsNullOrEmpty(item.PhoneNumber))
                            {
                                <div style="margin-bottom:5px;" class="border-bottom-row"></div>
                            }
                            else
                            {
                                <div style="margin-bottom:20px;" class="border-bottom-row"></div>
                            }
                        }                      
                    </div>
                </div>
            }
        }

    </div>
    <script>

    </script>
</body>
</html>