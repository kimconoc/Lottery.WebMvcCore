            radiobutton = new ej.buttons.RadioButton({ label: 'Nhiều cặp', name: 'cr_tCachTrungDaThang', enableRtl: 'true', checked: true });
            radiobutton.appendTo('#cr_tCachTrungDaThang_nhieuCap');
            //
