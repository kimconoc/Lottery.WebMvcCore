            radiobutton.appendTo('#cr_tCachTrungDaXien_motLan');
            radiobutton = new ej.buttons.RadioButton({ label: 'Ky rưỡi', name: 'cr_tCachTrungDaXien', enableRtl: 'true' });
            radiobutton.appendTo('#cr_tCachTrungDaXien_kyRuoi');
            radiobutton = new ej.buttons.RadioButton({ label: 'Nhiều cặp', name: 'cr_tCachTrungDaXien', enableRtl: 'true', checked: true });
            radiobutton.appendTo('#cr_tCachTrungDaXien_nhieuCap');

            // Miền Bắc
            radiobutton = new ej.buttons.RadioButton({ label: 'Một lần', name: 'cr_bCachTrungDaThang', enableRtl: 'true' });
            radiobutton.appendTo('#cr_bCachTrungDaThang_motLan');
            radiobutton = new ej.buttons.RadioButton({ label: 'Ky rưỡi', name: 'cr_bCachTrungDaThang', enableRtl: 'true' });
