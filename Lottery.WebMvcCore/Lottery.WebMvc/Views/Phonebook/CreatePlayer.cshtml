            radiobutton = new ej.buttons.RadioButton({ label: 'Nhiều cặp', name: 'cr_bCachTrungDaThang', enableRtl: 'true', checked: true });
            radiobutton.appendTo('#cr_bCachTrungDaThang_nhieuCap');
            // Render initialized CheckBox.
            var checkbox = new ej.buttons.CheckBox({ label: 'Hiện đá xiên' });
            checkbox.appendTo('#cr_bcheckbox_show_daxien');
            checkbox.change = function (args) {
                var element = document.getElementById("cr_show_bDaxien");
                if (args.checked) {
                    element.style.display = "block";
                } else {
                    element.style.display = "none";
                }
            };
        });

        // Bắt sự kiện submit của biểu mẫu create
        document.getElementById("createPlayerForm").addEventListener("submit", function (event) {
            event.preventDefault(); // Ngăn chặn biểu mẫu gửi đi mặc định
            alert("Đang phát triển");
            return;
            var playerModel = {
                name: document.getElementById("name").ej2_instances[0].value,
                tileXac: document.getElementById("tileXac").ej2_instances[0].value,
                tileThuong: document.getElementById("tileThuong").ej2_instances[0].value,
                tileBaSo: document.getElementById("tileBaSo").ej2_instances[0].value,
                daThang: document.getElementById("tileDaThang").ej2_instances[0].value,
                daXien: document.getElementById("tileDaXien").ej2_instances[0].value,
                bonSo: document.getElementById("tileBonso_create").ej2_instances[0].value,
            }
            var playerModels = [playerModel];
            playerModels.push();
            ShowOverlay(true);
            playerJsons = JSON.stringify(playerModels);
            $.ajax({
                type: "POST",
                data:
                {
                    "playerJsons": playerJsons,
                },
                url: "@Url.Action("ExecuteCreatePlayer", "Phonebook")",
                success: function (data) {
                    if (data.Success && data.Data) {
                        awesomeAlert({
                            header: true,
                            type: 'success',
                            title: 'Thành công!',
                            message: 'Tạo mới người chơi thành công.',
                            //bgColor: '#2dd284',
                            img: '/assets/images/icon/success.svg',
                            buttonOK: 'Xong!',
                            closeStyle: 'circle'
                        }).then(res => window.location = "/Phonebook/ListPlayer")
                    }
                    else {
                        var message = "Đã có lỗi xảy ra."
                        if (!isNullOrEmpty(data.Message)) {
                            message = data.Message;
                        }
                        awesomeAlert({
                            header: true,
                            type: 'error',
                            title: 'Có lỗi!',
                            message: message,
                            //bgColor: '#2dd284',
                            img: '/assets/images/icon/error.svg',
                            buttonOK: 'Oke!',
                            closeStyle: 'circle'
                        }).then(res => false)
                    }
                    hideOverlay();
                },
            })
        });

