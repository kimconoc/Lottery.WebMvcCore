<!-- _PartialView.cshtml -->
@using Lottery.DoMain.Models;
@using System;
@using Lottery.DoMain.Enum;
@model Dictionary<DateTime, List<CountByDay>>
<style>
    table {
        font-family: Arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        padding: 8px;
        text-align: center;
        width: 20%;
    }

    th {
        background: #dee8fc;
    }

    td {
        /*color: #e3165b;*/
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .summary-title{
        font-size: 15px;
        text-align:center;
    }

    .div-table-summary-results{
        margin-top:5px;
        display:flex;
        flex-flow:column;
    }
    
</style>
<div class="div-summary-results">
    <div class="summary-title">
        <strong>Tổng Kết Lời Lỗ</strong>
    </div>
    @{
        <div class="div-table-summary-results">
            @foreach (KeyValuePair<DateTime, List<CountByDay>> dic in Model)
            {
                <strong style="font-size:13px; color:#e3165b;">
                    Ngày: @dic.Key.ToString("dd/MM/yyyy")
                </strong>
                if (Model.Count == 1 && Model.Values.FirstOrDefault().Count == 0)
                {
                    <div class="box-no-data-found">
                        <img src="~/lottery/empty-order/empty-order.png">
                        <span>Không có dữ liệu</span>
                    </div>
                }
                else
                {
                    <div class="table-summary-result">
                        <table>
                            <tr>
                                <th>K.Hàng</th>
                                <th>M.Nam</th>
                                <th>M.Trung</th>
                                <th>M.Bắc</th>
                                <th>T.Tiền</th>
                            </tr>
                            @foreach (CountByDay count in dic.Value)
                            {
                                <tr>
                                    <td>@count.Name</td>
                                    <td>@count.MienNam</td>
                                    <td>@count.MienTrung</td>
                                    <td>@count.MienBac</td>
                                    @if (count.Total > 0)
                                    {
                                        <td style="color:blue;">@count.Total</td>
                                    }
                                    else if (count.Total < 0)
                                    {
                                        <td style="color:red;">@count.Total</td>
                                    }
                                    else
                                    {
                                        <td>@count.Total</td>
                                    }
                                </tr>
                            }
                        </table>
                    </div>
                }
            }
        </div>
    }
</div>